{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake_build",
            "type": "shell",
            // ⭐️ Команда для запуска сборки (предполагаем, что вы используете make или ninja)
            // Это запускает сборку в папке 'build'
            "command": "cmake --build ${workspaceFolder}/build", 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc" // Для корректного отображения ошибок компиляции
        }
    ]
}
